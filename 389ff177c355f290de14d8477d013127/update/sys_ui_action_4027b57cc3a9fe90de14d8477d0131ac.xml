        <script><![CDATA[function startCodeSearch() {
	if (typeof g_list != 'undefined') {
		const term = prompt('Enter your search term: ');
		if (term) {
			startSearch(term);
		}
	} else {
		const config = JSON.parse(g_form.getValue('data'));
		startSearch(config.term, config.scope, config.searchGroup);
	}	

	function startSearch(term, scope, searchGroup) {
		const ga = new GlideAjax('x_itx_codesearch.CodeSearchUtilClient');
		ga.addParam('sysparm_name', 'startSearch');
		ga.addParam('term', term);
		ga.addParam('scope', scope);
		ga.addParam('searchGroup', searchGroup);
		ga.getXMLAnswer(function (result) {
			result = JSON.parse(result);
			if (result.status == 'success') {
				const dd = new GlideDialogWindow('hierarchical_progress_viewer', false, '40em', '10em');
				dd.setTitle('Code Search for \'' + term + '\'');
				dd.setPreference('sysparm_renderer_execution_id', result.execution_id);
				dd.render();
			} else if (result.message && typeof g_form != 'undefined') {
				g_form.addErrorMessage(result.message);
			}
		});
	}
}]]></script>
